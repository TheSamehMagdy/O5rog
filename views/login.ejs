<% include ./partials/header.ejs %>

<div class="row text-center">
    <div class="col-sm-4 mx-auto">
        <h1 class="mb-4">Login</h1>
        <div class="mx-auto">
            <form action="/login" method="post">
                <div class="form-group">
                    <a href="/auth/facebook" class="btn btn-lg btn-primary btn-block mb-2 fb-button"><i class="fab fa-facebook-square mr-2 mb-1"></i> Login with Facebook</a>
                </div>
                <hr>
                <h5>Or:</h5>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Login</button>
                </div>
                <input type="hidden" name="referer" value= <%= referer %> >
            </form>
            <a href="/signup" class="d-block">Don't have an account? Sign Up Now!</a>
            <a href="/places" class="d-block">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/footer.ejs %>